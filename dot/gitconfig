[user]
	name = Ben Kuhn
	email = ben.s.kuhn@gmail.com
[author]
	name = Ben Kuhn
[core]
	autocrlf = input
	excludesfile = ~/conf/gitignore_global
	pager = less -FRSX
[push]
	default = current
[alias]
	st = status
	ci = commit
	co = checkout
	cm = checkout master
	cob = "!f() { git checkout -b ben/$1; }; f"
	db = "!f() { git diff $(git merge-base HEAD ${1:-dev}); }; f"
[github]
	user = benkuhn
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[diff]
	tool = bcomp
[merge]
	tool = bc3
[mergetool]
	bcomp = trustExitCode
	bc3 = trustExitCode
